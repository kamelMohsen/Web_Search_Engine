window.addEventListener("message",function(e){
    try{
        magicMsg = JSON.parse(e.data);
        if(magicMsg.id === "pa_light"){
        var va = document.getElementById("videoad");
        var agora = document.getElementById("AgoraHead");
        var in_va =  document.getElementById("inner_videoad");
        var elements = va.getElementsByTagName("iframe");
        elements = Array.from(elements);
        var final = elements.filter(function(e){
            return (e.width === "1" && e.height === "1")
        }
        )[0];
        in_va.style.cssText = "";
        agora.style.cssText = "position:relative!important;min-height:0!important;height:25px";
        final.style.cssText = "position:absolute!important;min-height:0!important";
        }else if(magicMsg.id === "pa_flip_quiz"){
            var va = document.getElementById("videoad");
            var agora = document.getElementById("AgoraHead");
            var elements = va.getElementsByTagName("iframe");
            elements = Array.from(elements);
            var final = elements.filter(function(e){
                return (e.width === "1" && e.height === "1")
            }
            )[0];
            agora.style.cssText = "position:relative!important;min-height:0!important;height:25px";
            final.style.cssText = "position:absolute!important;min-height:0!important";
        }
    } catch (e) {
    }
})
